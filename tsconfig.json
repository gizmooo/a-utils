{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES5",
      "ES6",
      "ESNext",
      "ScriptHost"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "target": "es2017",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true
  },
  "exclude": ["./node_modules/**/*", "./.yarn/**/*"],
  "include": ["./src/**/*"]
}