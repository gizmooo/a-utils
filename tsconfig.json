{
  "compilerOptions": {
    "lib": [
      "WebWorker",
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ScriptHost"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "./",
  },
  "exclude": ["node_modules"],
  "files": [
    "./src/index.ts"
  ],
  "include": ["./src"]
}